# Flask Application Configuration
# Copy this file to .env and update with your actual values
# IMPORTANT: Change all secret keys before deploying to production!

# Security Keys (CRITICAL: CHANGE THESE!)
FLASK_SECRET_KEY=CHANGE-ME-super-secret-flask-key-for-production-use-long-random-string
JWT_SECRET_KEY=CHANGE-ME-super-secret-jwt-key-for-production-use-different-long-random-string

# Application Settings
FLASK_ENV=production
FLASK_DEBUG=False
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Database Configuration (for future database migration)
DATABASE_URL=sqlite:///app.db
DATABASE_POOL_SIZE=5

# User Management Settings
PASSWORD_MIN_LENGTH=12
PASSWORD_MAX_LENGTH=128
LOGIN_ATTEMPT_LIMIT=5
TOKEN_EXPIRY_HOURS=24
REMEMBER_ME_DAYS=30
ACCOUNT_LOCKOUT_MINUTES=30

# File Processing Settings
ALLOWED_EXTENSIONS=csv,xlsx,xls
MAX_FILE_SIZE_MB=16
PANDAS_CHUNK_SIZE=10000

# Email Configuration (for user notifications - optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@yourapp.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=3

# Security Headers (for production deployment)
FORCE_HTTPS=False
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting (requests per minute)
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_LOGIN=5
RATE_LIMIT_UPLOAD=10
